{% macro blogPostPreview(post) %}
<div class="bg-gray-100 p-4 rounded-md shadow-md">
  <img src="{{ post.data.coverimage }}" alt="{{ post.data.blogtitle }}" class="w-full h-48 object-cover rounded-t-md mb-4">
  <h1 class="text-2xl font-bold mb-2">{{ post.data.blogtitle }}</h1>
  <p class="text-gray-600 mb-2">{{ post.data.description }}</p>
  <ul class="flex flex-wrap mb-4">
    {% for tag in post.data.tags %}
      <li class="bg-gray-200 rounded px-2 py-1 text-sm mr-2 mb-2">{{ tag }}</li>
    {% endfor %}
  </ul>
  <div class="mt-4">
    <span class="text-sm text-gray-500">{{ post.data.date }} - {{ post.data.author }}</span>
  </div>
</div>
{% endmacro %}