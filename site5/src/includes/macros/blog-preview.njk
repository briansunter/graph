{% macro blogPostPreview(post) %}
<div class="bg-gray-100 p-4 rounded-md shadow-md flex flex-col justify-between">
  <div>
    <img src="{{ post.data.coverimage }}" alt="{{ post.data.blogtitle if post.data.blogtitle else post.data.title }}" class="w-full h-48 object-cover rounded-t-md mb-4">
    <h1 class="text-2xl font-bold mb-2">{{ post.data.blogtitle if post.data.blogtitle else post.data.title }}</h1>
    <p class="text-gray-600 mb-2">{{ post.data.description }}</p>
  </div>
  
  <div>
    <ul class="flex flex-wrap mb-4">
      {% for tag in post.data.tags %}
        <li class="bg-gray-200 rounded px-2 py-1 text-sm mr-2 mb-2">{{ tag }}</li>
      {% endfor %}
    </ul>
    <span class="text-sm text-gray-500 mb-0">{{ post.data.date | asPostDate }}</span>
  </div>
</div>
{% endmacro %}