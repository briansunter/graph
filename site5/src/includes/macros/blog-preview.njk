{% macro blogPostPreview(post) %}
<div class="bg-gray-100 p-4 rounded-md shadow-md">
  <img src="{{ post.imageUrl }}" alt="{{ post.title }}" class="w-full h-48 object-cover rounded-t-md">
  <div class="mt-4">
    <h2 class="text-xl font-semibold">{{ post.title }}</h2>
    <p class="text-gray-600 mt-2">{{ post.description }}</p>
    <div class="mt-4">
      <span class="text-sm text-gray-500">{{ post.date }} - {{ post.author }}</span>
    </div>
  </div>
</div>
{% endmacro %}
