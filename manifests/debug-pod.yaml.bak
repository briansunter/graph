apiVersion: v1
kind: Pod
metadata:
  name: debug-build-pod2
spec:
  containers:
    - name: build
      image: busybox
      args: ["sleep", "3600"] # Keeps the container running for 1 hour
      securityContext:
        privileged: true
      volumeMounts:
        - name: docker-config
          mountPath: /kaniko/.docker
  restartPolicy: Never
  volumes:
    - name: docker-config
      secret:
        secretName: docker-config
